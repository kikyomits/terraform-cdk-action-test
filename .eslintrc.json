{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.ts"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "no-new": ["off"],
    "indent": ["error", 4],
    "@typescript-eslint/type-annotation-spacing": "warn"
  }
}
